<div class="container">
  <h2 style="margin: 100px 0;">購入する</h2>
  <div class="validates">
    <%= flash[:order_unsave]%><%= flash[:not_success_order] %>
  </div>

  <!-- オーダーフォーム -->
  <%= form_for [@item, @order], url:(item_order_confirm_path) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <table class="table table-borderless form-group">
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>期間</td>
      <td><%= f.date_field :first_day, class:'form-control' %> 〜 <%= f.date_field :last_day, class:'form-control' %></td>
    </tr>
    <tr>
      <td>人数</td>
      <td><%= f.text_field :amount, class:'form-control' %></td>
    </tr>
    <tr>
      <td>プランの金額</td>
      <td>¥<%= @item.price %>/人</td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "注文確認画面へ", class:"btn btn-success" %>
        <% end %></td>
    </tr>
  </table>
</div>