
<div class="w-100">
</div>
<h2>注文確定画面</h2>
<div class="w-100">
</div>
<table class="table">
<%= form_for [@item , @order] ,url:(item_order_path) do |f| %>
		<tr>
			<td>商品名</td>
			<td><%= @item.name %></td>
		</tr>
		<tr>
			<td>期間</td>
			<td><%= @order.first_day %>〜<%= @order.last_day %>
				<%= f.hidden_field :first_day %><%= f.hidden_field :last_day %>
			</td>
		</tr>
		<tr>
			<td>人数</td>
			<td><%= @order.amount %>
				<%= f.hidden_field :amount %>
			</td>
		</tr>
		<tr>
			<td>支払い方法</td>
			<td>ご登録のクレジットカード</td>
		</tr>
		<tr>
			<td>合計金額</td>
			<td>¥<%= @item.price %></td>
		</tr>
</table>
<%= f.submit "注文を確定する", class:"btn btn-success" %>
<% end %>
<div class="w-100">
</div>