<% users.each do |user| %>
  <div class="col-lg-3 responsibe-center" style="margin-bottom: 100px;">

    <% if admin_signed_in? %>

      <!-- User情報 -->
      <div>
        <%= link_to admins_user_path(user) do %>
        <%= attachment_image_tag user, :image, :fill, 200, 200,
        fallback:"noimage.png", size:"200x200", class:"image-action" %>
        <% end %>
      </div>

      <!-- バッジ -->
      <div>
        <% if Order.where(item: user.items, order_status: 3).count > 0%>
          <span class="maru"></span>
        <% end %>
        <%= user.family_name%>さん
      </div>

    <% else %>
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :image, :fill, 200, 200,
        fallback:"noimage.png", size:"200x200", class:"image-action" %>
      <% end %>
    <% end %>
  </div>
<% end %>

