<% users.each do |user| %>
  <div class="col-lg-3 responsibe-center" style="float: left;">

    <% if admin_signed_in? %>

      <!-- User情報 -->
      <div><%= user.family_name %>さん</div>
      <%= link_to admins_user_path(user) do %>
      <%= attachment_image_tag user, :image, :fill, 200, 200,
      fallback:"noimage.png", size:"200x200", class:"image-action user-image" %>
      <% end %>

      <!-- バッジ -->
      <% if Order.where(item: user.items, order_status: 3).count > 0 %>
        <div class="maru image-maru"></div>
      <% else %>
      <% end %>

    <% else %>
      <div><%= user.family_name %>さん</div>
      <%= link_to user_path(user) do %>
        <%= attachment_image_tag user, :image, :fill, 200, 200,
        fallback:"noimage.png", size:"200x200", class:"image-action" %>
      <% end %>
    <% end %>
  </div>
<% end %>