<% items.each do |item| %>
  	<!-- 画像 -->
	<div>
	  <%= link_to item_path(item) ,class:"image-action" do %>
		<% if current_page?(admins_items_path) %>
		  <%= link_to admins_item_path(item) ,class:"image-action" do %>
		    <%= attachment_image_tag item.photos.first , :image ,:fill ,700 ,300 ,class:"img-fluid"%>
		  <% end %>
		<% elsif user_signed_in? && current_page?(user_path(user)) %>
		  <%= attachment_image_tag item.photos.first , :image ,:fill ,1050 ,500 ,class:"img-fluid"%>
		<% else %>
			<%= attachment_image_tag item.photos.first , :image ,:fill ,1440 ,800 ,class:"img-fluid" %>
		<% end %>
	  <% end %>
	</div>

	<!-- お気に入り -->
	<div style="float: left;">
	  <i class="fas fa-bookmark" style="color: green;"><%= item.favorites.count %>人がお気に入り</i>
	</div>

	<!-- 商品情報 -->
	<table class="table">
	  <tr>
	    <td><%= item.name %></td>
		<td>¥<%= item.price %></td>
		<td>期間:<%= item.start_day.strftime("%Y/%m/%d") %> 〜 <%= item.finish_day.strftime("%m/%d") %></td>
		<td><% if user_signed_in? && item.user_id != current_user.id && item.item_status == 1 %>
		<%= link_to "購入する" , item_new_order_path(item) , class:"btn btn-success"%>
		<% end %>
		</td>
	  </tr>
	</table>

<% end %>

