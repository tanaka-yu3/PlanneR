<% items.each do |item| %>
    <div class="w-100 item-container">
    	<div class="row">
		<div class="col-3">
			<div>
			</div>
			<% else %>
		    <div>
		      <i class="fas fa-bookmark" style="color: green;"><%= item.favorites.count %>人がお気に入り</i>
		    </div>
		</div>
		<div class="col-5">
			<% if admin_signed_in? %>
			名前:<%= link_to (item.name) , admins_item_path(item) , class:"btn btn-light"%>
			<% else %>
		    名前: <%= link_to (item.name) , item_path(item) , class:"btn btn-light"%>
		  <% end %>
		  期間: <%= item.start_day %> 〜 <%= item.finish_day %>
		  説明<%= item.text %>
        </div>
        <div class="col-1">
          <% if user_signed_in? && item.user_id != current_user.id %>
            <%= link_to "購入する" , item_new_order_path(item) , class:"btn btn-success" %>
          <% end %>
        </div>
    </div>
    </div>
  <% end %>
<%= paginate items %>