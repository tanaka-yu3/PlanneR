
<div class="container">
	<div class="row">
	<% if admin_signed_in? %>
	  <%= render "index" ,items:@items , user:@user %>
    <% else %>
		<div class="w-100">
			<h2>New</h2>
			<%= render "index" ,items:@latest_items , user:@user %>
		</div>
		<div class="w-100">
			<h2>Popular</h2>
			<%= render "index" ,items:@popular_items , user:@user %>
		</div>
		<div class="w-100">
			<h2>comming_soon</h2>
			<%= render "index" ,items:@comingsoon_items , user:@user %>
		</div>
	<% end %>
  </div>
</div>