<div class="row">
    <div class="w-100">
		<h2 class="title">- New -</h2>
		<% if @latest_items.empty? && @comingsoon_items.present? %>
		  <h2 class="title">プラン承認中です。しばらくお待ちください。</h2>
		<% elsif @latest_items.empty?%>
		  <h2 class="title">プランはまだありません。しばらくお待ちください。</h2>
		<% else %>
		　<%= render "index" ,items:@latest_items , user:@user %>
		  <% if @latest_items.count >= 3 %>
		  	<%= link_to "もっと見る >>" ,items_latest_path , class:"btn btn-light"%>
		  <% end %>
		<% end %>
	</div>
	<div class="w-100">
		<h2 class="title">- Popular -</h2>
		<% if @popular_items.empty? %>
		  <h2 class="title">プランはまだありません。しばらくお待ちください。</h2>
		<% else %>
		　<%= render "index" ,items:@popular_items , user:@user %>
		  <% if @popular_items.count >= 3  %>
		  	<%= link_to "もっと見る >>" ,items_popular_path , class:"btn btn-light"%>
		  <% end %>
		<% end %>
	</div>
	<div class="w-100">
		<h2 class="title">- comming_soon... -</h2>
		<% if @comingsoon_items.empty? %>
		  <h2 class="title">準備中です。しばらくおお待ちください。</h2>
		<% else %>
		　<%= render "index" ,items:@comingsoon_items , user:@user %>
		  <% if @comingsoon_items.count > 3 %>
		  	<%= link_to "もっと見る >>" ,items_comming_soon_path , class:"btn btn-light"%>
		  <% end %>
		<% end %>
	</div>
</div>