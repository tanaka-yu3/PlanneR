<div class="container">
  <h3 style="margin: 40px;">
    <i class="fas fa-user-plus"></i>
    新規会員登録
  </h3>


  <div style="box-shadow: 0 0 8px gray; border-radius: 20px;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <table class="table table-borderless form-group" style=" border-radius: 10px;">
      <%= render "layouts/error_messages",model: f.object %>
      <tr>
        <td class="text-center">プロフィール写真</td>
        <td>
          <%= f.attachment_field:image %>
        </td>
      </tr>
      <tr>
        <td class="text-center">性<span class="item-attention">必須</span></td>
        <td><%= f.text_field :family_name, class:'form-control', placeholder:'例：山田' %></td>
      </tr>
      <tr>
        <td class="text-center">名</td>
        <td><%= f.text_field :last_name, class:'form-control', placeholder:'例：太郎' %></td>
      </tr>
      <tr>
        <td class="text-center">セイ</td>
        <td><%= f.text_field :family_name_kana, class:'form-control', placeholder:'例：ヤマダ' %></td>
      </tr>
      <tr>
        <td class="text-center">メイ</td>
        <td><%= f.text_field :last_name_kana, class:'form-control', placeholder:'例：タロウ' %></td>
      </tr>
      <tr>
        <td class="text-center">電話番号</td>
        <td><%= f.text_field :phone_number, class:'form-control', placeholder:'例:090-8888-7777'%></td>
      </tr>
      <tr>
        <td class="text-center">emailアドレス<span class="item-attention">必須</span></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'例:xxx@xxx.com' %></td>
      </tr>
      <tr>
        <td class="text-center">郵便番号</td>
        <td><%= f.text_field :postcode, id: "user_postcode", class:'form-control', placeholder:'例：123-4567'%></td>
      </tr>
      <tr>
        <td class="text-center">住所</td>
        <td><%= f.text_field :address, id:"user_address", class:'form-control', placeholder:'郵便番号を入力すると自動で入力されます' %></td>
      </tr>
      <tr>
        <td class="text-center">パスワード<span class="item-attention">必須</span></td>
        <td><%= f.password_field :password, autocomplete: "new-password", class:'form-control', placeholder:'6文字以上'%></td>
      </tr>
      <tr>
        <td class="text-center">パスワード(確認用)<span class="item-attention">必須</span></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control'%></td>
      </tr>
      <tr>
        <td></td>
        <td style="margin: 0 auto;">
          <%= f.submit '会員登録する', class:'btn btn-primary' %>
          <!-- googole omniauth 2.0 -->
          <%= link_to 'googleアカウントでログイン', user_google_omniauth_authorize_path, class:'btn btn-dark' %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>
</div>