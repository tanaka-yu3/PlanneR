<h2 class="title">新規会員登録</h2>
  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "layouts/error_messages",model: f.object %>
      <div class="form">
      	プロフィール写真 <br>
      	<%= f.attachment_field :image ,class:"block-center" %>
      </div>

      <div class="form">
      	姓<span class="item-attention">必須</span><br>
        <%= f.text_field :family_name %>
      </div>

      <div class="form">
      	名<br>
      	<%= f.text_field :last_name %>
      </div>

      <div class="form">
      	セイ<br>
      	<%= f.text_field :family_name_kana %>
      </div>
      <div class="form">
      	メイ<br>
      	<%= f.text_field :last_name_kana %>
      </div>

      <div class="form">
      	電話番号<br>
      	<%= f.text_field :phone_number %>
      </div>

      <div class="form">
      	Eメール<span class="item-attention">必須</span><br>
      	<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form">
      	郵便番号<br>
      	<%= f.text_field :postcode, id: "user_postcode"%>
      </div>

      <div class="form">
      	住所<br>
      	<%= f.text_field :address, id:"user_address"%>
      </div>

      <div class="form">
      	パスワード<span class="item-attention">必須</span><br>
      	<%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form">
      	パスワード（確認用）<span class="item-attention">必須</span><br>
      	<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div>
        <%= f.submit "登録", class:"btn btn-success" %><br><br>

        <!-- googole omniauth 2.0 -->
      	<%= link_to '/Googleアカウントで登録', user_google_omniauth_authorize_path, class:"fab fa-google btn btn-dark" %>
      </div>
    <% end %>
  </div>

