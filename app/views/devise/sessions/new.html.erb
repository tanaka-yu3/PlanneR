<div class="login_form form-group">
  <h2>
    <i class="fas fa-sign-in-alt"></i>
    ログイン画面
  </h2><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    Eメール<br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', style:'width: 50%; margin: 0 auto;' %>
  </div><br>

  <div class="field">
    パスワード<br>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', style:'width: 50%; margin: 0 auto;' %>
  </div><br>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-info", style:"margin-bottom: 20px;"%>
  </div>

  <div style="margin: 50px;">
    <%= link_to "はじめてご利用の方(新規会員登録)", new_user_registration_path %>
  </div>

  <!-- googole omniauth 2.0  -->
  <div>
    <%= link_to 'googleアカウントでログイン', user_google_omniauth_authorize_path, class:"btn btn-dark" %>
  </div>

  <% end %>
</div>