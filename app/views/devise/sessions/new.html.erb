<div class="text-center">
  <h2 style="margin-top: 100px;">ログイン画面</h2><br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        Eメール<br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div><br>

      <div class="field">
        パスワード<br>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div><br>

      <div class="actions">
        <%= f.submit "ログイン", class:"btn btn-info", style:"margin-bottom: 20px;"%>
      </div>

      <div>
        <%= link_to '/Googleアカウントでログイン', user_google_omniauth_authorize_path, class:"fab fa-google btn btn-dark" %>
      </div>

    <% end %>
</div>