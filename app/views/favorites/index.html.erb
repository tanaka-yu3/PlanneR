<h2 class="title">気になっているプラン</h2>
<% if @favorites.present? %>
	<% @favorites.each do |favorite| %>
	  <div class="col-lg-3 responsibe-center" style="float: left;">
	  <%= link_to item_path(favorite.item) do %>
		<%= attachment_image_tag favorite.item.photos.first, :image, :fill, 200, 200 %><% end %><br>
		<p><%= favorite.item.name %></p>
		<p><%= favorite.item.start_day.strftime("%Y/%m/%d") %>〜<%= favorite.item.finish_day.strftime("%m/%d") %></p>
		<p><%= favorite.item.name %></p>
	  </div>
	<% end %>
<% else %>
 <h2 class="title">0件です</h2>
<% end %>
  <%= paginate @favorites %>